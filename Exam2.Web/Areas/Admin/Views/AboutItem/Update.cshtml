@model AboutItemUpdateVM

<form asp-action="Update" method="post" enctype="multipart/form-data">

    @Html.ValidationSummary()

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" style="color:red;" class="form-text text-muted"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" style="color:red;" class="form-text text-muted"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" style="color:red;" class="form-text text-muted"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>